<rsuite-plugin id="@pluginId@" version="@pluginVersion@ at @timeStamp@">

    <lifecycleListener
        type="com.rsicms.rsuite.containerWizard.lifecycle.ProjectPluginLifecycleListener" />

	<extensionProvider id="rsuite.WebService">
	
		<staticWebService path="/WebContent" root="/@pluginId@" />

        <remoteApiDefinition id="@pluginId@-ws-invoke-wizard"
            handler="com.rsicms.rsuite.containerWizard.webService.InvokeContainerWizardWebService"
            label="Invoke Container Wizard" />
            
        <remoteApiDefinition id="@pluginId@-ws-get-section-type-info"
            handler="com.rsicms.rsuite.containerWizard.webService.GetSectionTypeInfoWebService"
            label="Get Section Type Information" />
            
        <remoteApiDefinition id="@pluginId@-ws-get-template-info"
            handler="com.rsicms.rsuite.containerWizard.webService.GetTemplateInfoWebService"
            label="Get Template Information" />

		<!-- FIXME: remove after this is no longer helpful. -->            
        <remoteApiDefinition id="@pluginId@-ws-test-create-container"
            handler="com.rsicms.rsuite.containerWizard.webService.TestCreateContainerWebService"
            label="Test Create Container" />
            
		<!-- FIXME: remove after this is no longer helpful. -->            
        <remoteApiDefinition id="@pluginId@-ws-test-container-contents-form"
            handler="com.rsicms.rsuite.containerWizard.webService.TestContainerContentsFormWebService"
            label="Test the Container Contents Form" />

	</extensionProvider>
	
    <extensionProvider id="rsuite.UI">

		<scriptInclude src="@pluginId@/ContainerWiz.js" />
		<scriptInclude src="@pluginId@/ContainerWiz/SectionType.js" />
		<scriptInclude src="@pluginId@/ContainerWiz/XmlMoConfView.js" />
		<styleInclude src="@pluginId@/ContainerWiz/XmlMoConfView.less" />

    </extensionProvider>

    <extensionProvider id="rsuite.Forms">
    
        <datatypeDefinition name="@pluginId@-dt-loading" label="Loading" formControlType="select" baseType="string">
          <optionListProvider
              handler="com.rsicms.rsuite.containerWizard.datatype.LoadingOptionValuesProviderHandler"/>
        </datatypeDefinition>

        <datatypeDefinition name="@pluginId@-dt-close-and-continue" label="Choice to close or continue" formControlType="button" baseType="string">
          <optionListProvider
              handler="com.rsicms.rsuite.containerWizard.datatype.CloseOrContinueOptionValuesProviderHandler"/>
        </datatypeDefinition>
        
        <datatypeDefinition name="@pluginId@-dt-close" label="Close" formControlType="button" baseType="string">
          <optionListProvider
              handler="com.rsicms.rsuite.containerWizard.datatype.CloseOnlyOptionValuesProviderHandler"/>
        </datatypeDefinition>
        
        <formDefinition id="@pluginId@-form-container-contents"
            label="Container Contents" 
            description="Enable user to configure the contents of the new container"
            handler="com.rsicms.rsuite.containerWizard.advisor.form.ContainerContentsFormHandler">
        </formDefinition>
        
    </extensionProvider>

</rsuite-plugin>